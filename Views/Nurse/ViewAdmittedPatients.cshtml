@{
    ViewData["Title"] = "ViewPatients";
}
<style>
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .success-message {
        display: none;
        color: green;
        text-align: center;
    }

    #dischargeButton {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        margin-top: 10px;
        width: 100%;
    }

        #dischargeButton:hover {
            background-color: #218838;
        }

</style>
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Admitted Patients </h3>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <div id="order-listing_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
