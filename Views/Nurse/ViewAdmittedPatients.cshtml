                                                <td>Jade</td>
                                                <td>Dr.Banda</td>
                                                <td>Ward 1</td>
                                                <td>Bed 20</td>
                                                <td>ABC123</td>
                                                <td>
                                                    <label class="badge badge-info">Admitted</label>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#patientModal">
                                                        View
                                                    </button>
                                                    <button class="btn btn-outline-primary" onclick="window.location.href='@Url.Action("RecaptureVitals","Nurse")'">Vitals</button>
                                                    <button class="btn btn-outline-primary" onclick="window.location.href='@Url.Action("PrescriptionDetails","Nurse")'">Administer</button>
                                                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#dischargeModal">
                                                        Discharge
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr class="even">
                                                <td class="sorting_1">3</td>
                                                <td>Sam</td>
                                                <td>Dr.Banda</td>
                                                <td>Ward 2</td>
                                                <td>Bed 10</td>
                                                <td>ABC123</td>
                                                <td>
                                                    <label class="badge badge-info">Admitted</label>
                                                </td>
                                                <td>
                                                    <button class="btn btn-outline-primary">View</button>
                                                    <button class="btn btn-outline-primary" onclick="window.location.href='@Url.Action("RecaptureVitals","Nurse")'">Vitals</button>
                                                    <button class="btn btn-outline-primary" onclick="window.location.href='@Url.Action("PrescriptionDetails","Nurse")'">Administer</button>
