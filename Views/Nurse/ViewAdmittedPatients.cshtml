<script>
    var modal = document.getElementById("dischargeModal");
    var successMessage = document.getElementById("successMessage");
    function closeModal() {
        modal.style.display = "none";
    }
    function dischargePatient() {
        // Here you can handle the discharge process
        // For now, just showing a pop-up message
        alert("Patient successfully discharged!");
        window.location.href = '/Nurse/ViewAdmittedPatients'// Close the modal after discharge
    }

    function populatePatientInfo() {
        const user = {
            Name: "Jade Appels",
            TreatmentCode: "ABC123",
            TreatmentCodeDesc: "Removal of Wisdom Teeth",
            Surgeon: "Dr.Banda",
            IDNumber: "0109105229081",
            Allergies: ["Peanuts", "Dust"], // Change to an array
            MedicalConditions: ["Diabetes"], // Change to an array
            CurrentMedications: ["Insulin"] // Change to an array
        };

        // Populate modal with user information
        document.getElementById('patientInfo').innerHTML = `
            <p><strong>ID Number:</strong> ${user.IDNumber}</p>
            <p><strong>Name:</strong> ${user.Name}</p>
            <p><strong>Treatment Code:</strong> ${user.TreatmentCode}</p>
            <p><strong>TC Description:</strong> ${user.TreatmentCodeDesc}</p>
            <p><strong>Name Of Surgeon:</strong> ${user.Surgeon}</p>
            <p><strong>Allergies:</strong> ${user.Allergies.join(", ")} <button class="btn btn-sm btn-primary" onclick="editInfo('allergies')">Edit</button></p>
            <p><strong>Medical Conditions:</strong> ${user.MedicalConditions.join(", ")} <button class="btn btn-sm btn-primary" onclick="editInfo('medicalConditions')">Edit</button></p>
            <p><strong>Current Medication:</strong> ${user.CurrentMedications.join(", ")} <button class="btn btn-sm btn-primary" onclick="editInfo('currentMedications')">Edit</button></p>
        `;
    }
    function editInfo(type) {
        window.location.href = `/Nurse/EditPatient?type=${type}`
    }
    // Event listener for button click to populate modal with patient information
    document.querySelector('.btn-outline-primary').addEventListener('click', populatePatientInfo);

</script>
