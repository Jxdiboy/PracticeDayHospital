@{
    ViewData["Title"] = "Email Preview";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Preview</title>
    <style>
        /* Add your custom styles for email layout */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .card {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .sender {
            font-weight: bold;
        }

        .subject {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .body {
            margin-top: 20px;
        }

        .email-container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .email-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .email-body {
            margin-bottom: 20px;
        }

        #vitalsTable {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            #vitalsTable th,
            #vitalsTable td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            #vitalsTable th {
                background-color: #f2f2f2;
            }

        #notes {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }

        .send-button {
            display: block;
            width: auto;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            font-size: 16px;
        }
    </style>
</head>
<body>
    
    <div class="email-container">
        <h1>Email Preview</h1>
        <div class="sender">To: Dr.Banda</div>
        <div class="subject">Subject: Patients Vitals</div>
        <div class="body">
            <table id="vitalsTable">
                <thead>
                    <tr>
                        <th>Vital</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Heart Rate (bpm)</td>
                        <td>@Model.HeartRate</td>
                    </tr>
                    <tr>
                        <td>Respiratory Rate (breaths/min)</td>
                        <td>@Model.ResRate</td>
                    </tr>
                    <tr>
                        <td>Blood Pressure (Systolic)</td>
                        <td>@Model.BloodPressureSystolic</td>
                    </tr>
                    <tr>
                        <td>Blood Pressure (Diastolic)</td>
                        <td>@Model.BloodPressureDiastolic</td>
                    </tr>
                    <tr>
                        <td>Temperature (°C)</td>
                        <td>@Model.Temperature</td>
                    </tr>
                    <tr>
                        <td>Blood Oxygen (%)</td>
                        <td>@Model.BloodOxygen</td>
                    </tr>
                    <tr>
                        <td>Blood Glucose Level(mg/dL)</td>
                        <td>@Model.BloodGlucoseLevel</td>
                    </tr>
                    <!-- Add more rows for other vitals -->
                </tbody>
            </table>
            <h5>Nurse's Notes</h5>
            <textarea id="notes" rows="4" cols="50"></textarea>
            <!-- Section for adding notes -->
        </div>
        <br />
        <button type="button" onclick="sendEmail()" class="send-button">Send Email</button>
        <!-- Button to send the email -->
    </div>
</body>
<script>
    function sendEmail() {
        // Perform email sending process, e.g., using AJAX
        // Display success message
        alert("Email sent successfully!");
        // Redirect back to the View Admitted Patients page
        window.location.href = '/Nurse/ViewAdmittedPatients';
    }
</script>
