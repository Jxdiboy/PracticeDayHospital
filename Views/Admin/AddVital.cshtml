@model DayHospital.Models.Admin.Vitals
@{
    ViewData["Title"] = "Add Vital";

}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div>
                <h4 class="card-title text-center">Add Vital</h4>
            </div>
            <div class="row justify-content-center">
                <form class="forms-sample" method="post" asp-action="AddVital" style="width:50%">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" autocomplete="off" class="form-control" placeholder="Vital Name">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Maximum"></label>
                        <input asp-for="Maximum" autocomplete="off" type="text" class="form-control" placeholder="Maximum">
                        <span asp-validation-for="Maximum" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Minimum"></label>
                        <input asp-for="Minimum" autocomplete="off" type="text" class="form-control" placeholder="Minimum">
                        <span asp-validation-for="Minimum" class="text-danger"></span>

                    </div>
                    <div class="row justify-content-center">
                        <button style="width:25%" type="submit" class="btn btn-primary me-2">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>