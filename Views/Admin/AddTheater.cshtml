@{
    ViewData["Title"] = "Add Theater";

}
@model Theater
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div>
                <h4 class="card-title text-center">Add Theater</h4>
            </div>
            <div class="row justify-content-center">
                <form class="forms-sample" method="post" asp-action="AddTheater" style="width:50%">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" autocomplete="off" class="form-control" placeholder="Theater Name">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="RoomNumber"></label>
                        <input asp-for="RoomNumber" autocomplete="off" type="text" class="form-control" placeholder="Room Number">
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>

                    </div>
                    <div class="row justify-content-center">
                        <button style="width:25%" type="submit" class="btn btn-primary me-2">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>