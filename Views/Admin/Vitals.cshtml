@{
    ViewData["Title"] = "Vitals";

}
@model List<DayHospital.Models.Admin.Vitals>

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div>
                <h4 class="card-title text-center">Vitals</h4>
            </div>
            <div class="row">
                <div class="col-md-10">
                </div>
                <div class="col-md-2" style="display:flex;justify-content:end;align-items: center;">
                    <a asp-action="AddVital" class="btn btn-primary btn-lg text-white" style="height:min-content"><i class="fa-solid fa-plus"></i>Add New Vital</a>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-11">
                    <div class="mt-3">
                        <div class="card-body">
                            <h3 class="card-title text-center"></h3>
                            <div class="table-responsive" style="height:500px;">
                                <table class="table table-hover mt-1 display" style="width:100%" id="td-table">

                                    <thead class="bg-light sticky-top">
                                        <tr>
                                            <th>Name</th>
                                            <th>Maximum</th>
                                            <th>Minimum</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Name
                                                    </td>
                                                    <td>
                                                        @item.Maximum
                                                    </td>
                                                    <td>
                                                        @item.Minimum
                                                    </td>

                                                    <td class="text-center">
                                                        <a class="btn btn-outline-primary" type="button" href="@Url.Action("UpdateVital","Admin", new {Id = item.Id})"><i class="fa-regular fa-pen-to-square"></i> Update</a>
                                                    </td>

                                                </tr>
                                            }

                                        }


                                    </tbody>

                                </table>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.datatables.net/2.0.4/js/dataTables.js"></script>
    <script>

        $(document).ready(function () {
            var table = $('#td-table').DataTable({
                "columnDefs": [
                    { "type": "string", "targets": 0 },
                    { "type": "string", "targets": 1 },
                    { "type": "string", "targets": 2 },
                    { "orderable": false, "targets": -1 }

                ]
            });
        });
    </script>
}
