@{
    ViewData["Title"] = "Update Code";

}
@model TreatmentCode
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div>
                <h4 class="card-title text-center">Update Treatment Codes</h4>
            </div>
            
            <div class="row justify-content-center">
                <form class="forms-sample" method="post" asp-action="UpdateTreatmentCode" style="width:50%">
                    <div class="form-group">
                        <label asp-for="TreatmentId"></label>
                        <input type="text" asp-for="TreatmentId" autocomplete="off" class="form-control" placeholder="Treatment Code">
                    </div>
                    <div class="form-group">
                        <label asp-for="TreatmentName"></label>
                        <input asp-for="TreatmentName" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="Description">
                    </div>
                    <input asp-for="Id" hidden />
                    <div class="row justify-content-center">
                        <button type="submit" style="width:25%" class="btn btn-primary me-2">Submit</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>