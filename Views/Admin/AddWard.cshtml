@{
    ViewData["Title"] = "Add Ward";

}
@model DayHospital.Models.Admin.Ward
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div>
                <h4 class="card-title text-center">Add Ward</h4>
            </div>
            <div class="row justify-content-center">
                <form class="forms-sample" method="post" asp-action="AddWard" style="width:50%">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" autocomplete="off" class="form-control" placeholder="Ward Name">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="row justify-content-center">
                        <button type="submit" style="width:25%" class="btn btn-primary me-2">Submit</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>