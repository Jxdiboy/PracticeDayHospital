@{
    ViewData["Title"] = "StockOrder";
}
<h2 class="card-title" style="font-size:30px;text-align-last:center">Order Stock</h2>

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">

            <div class="d-sm-flex justify-content-between align-items-start">
                <div>
                    <h1 class="card-title" style="font-size:25px">Medication on Hand</h1>
                </div>
                <div>
                    <input class="form-control" id="patientID" maxlength="13" placeholder="Medication Name" autocomplete="off" />
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <div id="order-listing_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="col-sm-12">
                                <table id="order-listing" class="table dataTable no-footer" aria-describedby="order-listing_info">
                                    <thead>
                                        <tr>
                                            <th>Medicine Name</th>
                                            <th>Quantity(Units)</th>
                                            <th>Quantity Level</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Alcougholex</td>
                                            <td>150</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: 80%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Pretizone</td>
                                            <td>86</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: 40%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Panado</td>
                                            <td>40</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card-body">
    <div class="row" id="" style="justify-content:space-around">
        <div class="card col-md-10">
            <div class="card-body">
                <h2 class="card-title" style="font-size:27px;text-align-last:center">Select Stock</h2>
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-7">
                            <form action="#">
                                <div class="form-group row">
                                    <label for="input1" class="col-sm-4 col-form-label" style="font-size:17px">Order Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" style="width:200px" value="01234" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="input2" class="col-sm-4 col-form-label" style="font-size:17px">Medication Name</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" id="SelectedMed"style="width:320px;background-color:white;color:black">
                                            <option>None</option>
                                            <option>Panadoe</option>
                                            <option>Pretizone</option>
                                            <option>Broncough</option>
                                            <option>Alcougholex</option>
                                            <option>Alcougholine</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="input3" class="col-sm-4 col-form-label" style="font-size:17px">Quantity (Units)</label>
                                    <div class="col-sm-7">
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="Quantity" style="width:200px">
                                            <div class="input-group-append">
                                                <button class="btn btn-sm btn-light" type="button" onclick="addItem()" style="border-radius:12px">ADD</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <a asp-action="StockLevels" class="btn btn-info" style="color:white;border-radius: 13px;font-size:15px;width:200px">Submit</a>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 form-right">
                            <div class="card" style="width:300px">
                                <div class="card-body">
                                    <label style="font-size:18px">Selected Medication</label>
                                    <p></p>
                                    <ul id="Selected">

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    function addItem() {
        var selectedItem = document.getElementById("SelectedMed").value;
        var inputValue = document.getElementById("Quantity").value;

        if (!inputValue) {
            alert("Please enter a related value.");
            return;
        }

        var listItem = document.createElement("li");
        listItem.textContent = selectedItem + ": " + inputValue + "  ";

        var deleteButton = document.createElement("button");
        deleteButton.textContent = "Delete";
        deleteButton.style.fontSize = "10px"; // Smaller font size
        deleteButton.style.padding = "1px 3px"; // Smaller padding
        deleteButton.style.marginLeft = "10px";
        deleteButton.onclick = function () {
            this.parentElement.remove();
        };

        listItem.appendChild(deleteButton);
        document.getElementById("Selected").appendChild(listItem);


    }
</script>

